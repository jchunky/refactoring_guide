#!/bin/bash
# Seed a new version of kata code by copying original files
# Usage: bin/seed_version v3

VERSION=$1

if [ -z "$VERSION" ]; then
  echo "Usage: bin/seed_version <version>"
  echo "Example: bin/seed_version v3"
  exit 1
fi

TARGET_DIR="lib/${VERSION}"
mkdir -p "$TARGET_DIR"

for original in lib/original/*.rb; do
  base=$(basename "$original")
  target="${TARGET_DIR}/${base}"
  cp "$original" "$target"
  echo "Created $target"
done
